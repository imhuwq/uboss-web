<%= content_for :title do %>
  呼叫服务
<% end %>
<%= content_for :page_title do %>
  <div class="text-center" style="padding-right: 10px;">所在桌号</div>
<% end %>
<%= content_for :header_right do %>
  <span class="pull-right">&nbsp;</span>
<% end %>
<%= content_for :header_right do %>  
  <span class="pull-left">&nbsp;</span>
<% end %>

<%= simple_form_for 'table_number', url: set_table_number_seller_calling_services_path(seller_id: params[:seller_id]) do |f| %>
  
    <div class="text-center" style="transform: translate(-50%,-50%); top: 50%;left: 50%; position: absolute; width: 100%;">
     <div class="m-bottom10">
       <span class="calling-service-local main-color">所在桌号</span>
     </div>
     <div><%= f.select :id, options_for_select([['请选择桌号', '']] + @select_arr), {} %></div>     
     <br />
     <div><%= f.submit '确定', class:"btn btn-large btn-orange disabled",style:'width:30%'%><div>
    </div>
<% end %>
<script>
$("#table_number_id").on('change',function(){
  if($("#table_number_id").prop('value') != ''){
    $('.btn').removeClass('disabled')
  }else{
    $('.btn').addClass('disabled')
  }
})
  
</script>