<div class="container mod-inner">
  <div class="list-search-bar">
    <%= link_to("+ 添加服务", url_for(action: :new), class: "btn btn-large text-center", role: "button", style: "width:90px;") %>
    <%= link_to("设置", url_for(action: :set_table_info), class: "btn btn-large text-center", role: "button", style: "width:90px;") %>
  </div>
  <br />

  <%= horizon_form_for @table_info, url: update_table_info_admin_calling_services_path, method: :patch do |f| %>
    <div class="admin-box beige-bg-color">
      <h4 class="edit-title">桌号设置</h4>
      <%= f.input :table_count %>
    </div>
    <br />
    <div class="admin-box beige-bg-color">
      <h4 class="edit-title">下桌设置</h4>
      <%= f.input :table_expired_in, hint: '消费者就餐多久后默认下桌，再次呼叫服务需重新定位当前桌号（单位：分钟）' %>
    </div>

    <br />
    <div class="form-actions text-center">
      <%= f.submit "保存", class: "btn btn-large" %>
    </div>
  <% end %>
</div>
