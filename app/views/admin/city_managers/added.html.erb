<div class="container">
	<div class="header-tab">
    <%#= link_to_certifications_tabs %>
	</div>
</div>
<br />

<div id="index_list">
<div class="container nogap">
	<div class="box-w25">
		<div class="admin-box main-bg-color">
	    <h4><%= @city_manager.city_name %>商家总数</h4>
	    <h1 class="num"><%= @total.count %></h1>
	  </div>
	</div>
	<div class="box-w25">
		<div class="admin-box yellow-bg-color">
	    <h4>今日新增商家</h4>
	    <h1 class="num"><%= @total.today.count %></h1>
		</div>
	</div>
	<div class="box-w25">
		<div class="admin-box blue-bg-color">
	    <h4>本周新增商家</h4>
	    <h1 class="num"><%= @total.week.count %></h1>
		</div>
	</div>
  <div class="box-w25">
  	<div class="admin-box red-bg-color">
	    <h4>本月新增商家</h4>
	    <h1 class="num"><%= @total.month.count %></h1>
	  </div>
  </div>
</div>
<br />
  <div class="container">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if params[:segment] == 'today' %>"><%= link_to "今日新增", {segment: 'today'} %></li>
      <li class="<%= 'active' if params[:segment] == 'week' %>"><%= link_to "本周新增", {segment: 'week'} %></li>
      <li class="<%= 'active' if params[:segment] == 'month' %>"><%= link_to "本月新增", {segment: 'month'} %></li>
    </ul>
    <% segment = %w(today week month).include?(params[:segment]) ? params[:segment] : 'today' %>
      <%= render partial: "admin/city_managers/addeds/#{segment}" %>
    <br />
    <%= paginate @certifications %>
  </div>

  <script type="text/javascript">
    $(document).ready(function(){
      $("body").on("click", "tbody.item>tr", function(){
        var target = $(this).parent().next();
        target.toggleClass("hidden");
      })
    });
  </script>
</div>
