<div class="row">
  <div class="col-xs-4"></div>
  <div class="col-xs-2">
    <%= link_to "个人认证", url_for(controller: :personal_authentications, action: :index) , class:"btn btn-default col-xs-12" %>
  </div>
  <div class="col-xs-2"><%= link_to "企业认证",  '###', class:"btn btn-primary col-xs-12" %></div>
</div>
<hr/>
<div class="row text-center">
  <div class="col-xs-2"></div>
  <div class="col-xs-2">
    <div>已提交</div>
    <b style="font-size:3em;"><%= EnterpriseAuthentication.posted.count %></b>
  </div>
  <div class="col-xs-2">
    <div>审核中</div>
    <b style="font-size:3em;"><%= EnterpriseAuthentication.review.count %></b>
  </div>
  <div class="col-xs-2">
    <div>已通过</div>
    <b style="font-size:3em;"><%= EnterpriseAuthentication.pass.count %></b>
  </div>
  <div class="col-xs-2">
    <div>未通过</div>
    <b style="font-size:3em;"><%= EnterpriseAuthentication.no_pass.count %></b>
  </div>
</div>
