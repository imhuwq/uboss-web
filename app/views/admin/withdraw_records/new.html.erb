<ol class="breadcrumb">
  <li><%= link_to '提现列表', [:admin, :withdraw_records] %></li>
  <li class="active">申请提现</li>
</ol>

<h3>申请提现</h3>
<hr />

<p>总收益：<span class="label label-primary"><%= number_to_currency current_user.income + current_user.frozen_income %></span></p>
<p>可提现：<span class="label label-success"><%= number_to_currency current_user.income %></span></p>

<br />

<%= simple_form_for [:admin, @withdraw_record] do |f| %>
  <%= f.input :amount, hint: "最低提现金额为￥100" %>
  <%= f.association :bank_card, label_method: :identify, value_method: :id,
    collection: current_user.bank_cards,
    prompt: "#{@withdraw_record.wechat_available? ? '微信打款' : '请选择银行卡'}" %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
