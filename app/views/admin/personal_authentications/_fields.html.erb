<div class="row">
  <%= f.input :name, as: :string, :label_html=>{:class=>"text-right"} %>
  <%= f.input :identity_card_code, as: :integer, :label_html=>{:class=>"text-right"}, input_html: {class:"col-sm-6"} %>
</div>

<div class="form-group row">
    <%= f.label :face_with_identity_card_img,:class=>" text-right col-sm-3 control-label" %>
  <div  class="col-xs-6">
    <% if @personal_authentication.present? and @personal_authentication.face_with_identity_card_img %>
      <%= image_tag(@personal_authentication.face_with_identity_card_img, width: "100%", alt: "-") %>
    <% end %>
    <%= f.file_field :face_with_identity_card_img ,:name=>"face_with_identity_card_img" %>
  </div>
</div>
<div class="form-group row">
    <%= f.label :identity_card_front_img,:class=>" text-right col-sm-3 control-label" %>
  <div  class="col-xs-6">
    <% if @personal_authentication.present? and @personal_authentication.identity_card_front_img %>
      <%= image_tag(@personal_authentication.identity_card_front_img, width: "100%", alt: "-") %>
    <% end %>
    <%= f.file_field :identity_card_front_img ,:name=>"identity_card_front_img" %>
  </div>
</div>
<div class="row"><%= f.input :address, as: :string, :label_html=>{:class=>"text-right"},input_html: {class:"col-sm-8"} %></div>

<div class="form-group row">
  <%= f.label :mobile,:class=>"text-right col-sm-3 control-label" %>
  <div class="col-xs-3"><%= f.input_field :mobile , as: :tel, id:"new_mobile", style:"width:100%;" %></div>
  <div class="col-xs-3"><%= link_to '发送', '###',class: "btn btn-default btn-xs",id:"send_mobile" %></div>
</div>
<div class="row"><%= f.input :mobile_auth_code, as: :tel, required: true, :label_html=>{:class=>"text-right"} %></div>
<script>
$('#personal_authentication_mobile_auth_code').on('keyup',function(m){
  var code = $(this).val()
  console.log(code.length == 5)
  if (code.length == 5) { $('#submit_bottom').removeAttr('disabled')}
  if (code.length != 5) { $('#submit_bottom').attr('disabled','disabled')}
})
</script>
