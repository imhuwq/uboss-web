<div class="admin-box black-bg-color">
  <%= f.input :name %>
  <%= f.input :identity_card_code %>
  <%= f.input :face_with_identity_card_img, hint:"(点击图片进行替换)" do %>
    <%= f.input_field :face_with_identity_card_img, type: :hidden, as: :file %>
    <span class="fileinput-button">
      <% if f.object.new_record? || f.object.face_with_identity_card_img_identifier.blank? %>
        <%= image_tag("admin/no-img.png") %>
      <% else %>
        <%= image_tag(f.object.face_with_identity_card_img_url(:w320)) %>
      <% end %>
      <%= upyun_meta_tags prefix: 'personal_authentication/face_with_identity_card_img' %>
      <%= file_field_tag "face_with_identity_card_img", class: "upyun_file_closest" %>
      <b class="loading"><i class="fa fa-spinner"></i></b>
    </span>
  <% end %>
  <%= f.input :identity_card_front_img, hint:"(点击图片进行替换)" do %>
    <%= f.input_field :identity_card_front_img, type: :hidden, as: :file %>
    <span class="fileinput-button">
      <% if f.object.new_record? || f.object.identity_card_front_img_identifier.blank? %>
        <%= image_tag("admin/no-img.png") %>
      <% else %>
        <%= image_tag(f.object.identity_card_front_img_url(:w320)) %>
      <% end %>
      <%= upyun_meta_tags prefix: 'personal_authentication/identity_card_front_img' %>
      <%= file_field_tag "identity_card_front_img", class: "upyun_file_closest" %>
      <b class="loading"><i class="fa fa-spinner"></i></b>
    </span>
  <% end %>
  <div class="form-group string required user_address_mobile">
    <label class="string required control-label"><abbr title="必填">*</abbr>所在地区</label>
    <div class="city-group control-input" style="padding-top:7px;">
        <%= f.select(:province_code, options_for_select([['--省份--', '']] + ChinaCity.provinces, selected: f.object.province_code ), {},
        	class: 'city-select ', id: "province", style:"width:100px;display:inline;", 'data-manual-chosen'=>true ) %>
        <%= f.select :city_code, options_for_select([['--城市--', '']] + ChinaCity.list(f.object.province_code), selected: f.object.city_code ), {},
         	:class => 'city-select', id: "city", style:"width:100px;display:inline;", 'data-manual-chosen'=>true %>
        <%= f.select :district_code, options_for_select([['--地区--', '']] + ChinaCity.list(f.object.city_code), selected: f.object.district_code), {},
         	:class => 'city-select', id: "area", style:"width:100px;display:inline;", 'data-manual-chosen'=>true %>
    </div>
  </div>
  <%= f.input :address %>
  <div class="form-group string required enterprise_authentication_mobile">
    <%= f.label :mobile, class:"string required control-label" %>
    <%= link_to '发送', '###',class: "btn btn-large pull-right",id:"send_mobile",style:"border-radius:0 4px 4px 0;" %>
    <div class="control-input">
    	<%= f.input_field :mobile , as: :tel, id:"new_mobile", style:"border-radius:4px 0 0 4px;" %>
    </div>

  </div>
  <%= f.input :mobile_auth_code %>
</div>
