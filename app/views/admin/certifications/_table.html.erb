<div id="index_list">
<div class="container nogap">
	<div class="box-w25">
		<div class="admin-box main-bg-color">
	    <h4>已提交</h4>
	    <h1 class="num"><%= @certifications.posted.count %></h1>
	  </div>
	</div>
	<div class="box-w25">
		<div class="admin-box yellow-bg-color">
	    <h4>审核中</h4>
	    <h1 class="num"><%= @certifications.review.count %></h1>
		</div>
	</div>
	<div class="box-w25">
		<div class="admin-box blue-bg-color">
	    <h4>已通过</h4>
	    <h1 class="num"><%= @certifications.pass.count %></h1>
		</div>
	</div>
  <div class="box-w25">
  	<div class="admin-box red-bg-color">
	    <h4>未通过</h4>
	    <h1 class="num"><%= @certifications.no_pass.count %></h1>
	  </div>
  </div>
</div>
<br />
<div class="container">
	<table class="list-table" id="personal_authentications">
		<thead>
			<th>商家名称</th>
			<th>绑定手机</th>
			<th>创建时间</th>
			<th>状态</th>
			<th>操作</th>
		</thead>
		<% @certifications.each do |obj| %>
		<tr id="personal_authentication_<%= obj.user_id%>">
			<td class="text-left">
				 <%= link_to url_for(controller: 'admin/personal_authentications', action: :show, user_id: obj.user_id) do %>			    
			      <%= image_tag(obj.user.avatar.url(:thumb), size: "80x80", alt: "-") %>　		    
			      <%= obj.user.identify %>
			    </div>
			    <% end %>
			</td>
			<td><%= obj.user.login %></td>
			<td><%= obj.created_at %></td>
			<td>
				<% case obj.status %>
			    <% when 'posted' %>
			    	<span class='label label-info'>
			    <% when 'review' %>
			    	<span class='label label-warning'>
			    <% when 'pass' %>
			    	<span class='label label-success'>
			    <% when 'no_pass' %>
			    	<span class='label label-danger'>
			    <% else %>
			    	<span class='label label-default'>
			  <% end %>
			    <%= obj.status_i18n %>
			  </span>
			</td>
			<td>
        <% if can?(:change_status, Certification) %>
          <%= link_to '锁定资料', '#', data: { behavior: 'changeStatus', to: 'review', id: obj.id }, class:"btn yellow-btn" if obj.may_review? %>
  	      <%= link_to '通过', '#', data: { behavior: 'changeStatus', to: 'pass', id: obj.id }, class:'btn' if obj.may_pass?  %>
  	      <%= link_to '不通过', '#', data: { behavior: 'changeStatus', to: 'no_pass', id: obj.id }, class:'btn red-btn' if obj.may_reject? %>
        <% end %>
			</td>
		</tr>
		<% end %>
	</table>
	<br />	
	<%= paginate @certifications %>
</div>
</div>