<div class="header-tab">
  <%= link_to_certification_edit_tabs %>
</div>
  <br />
<h3 cclass="page-title"><%= title %></h3>
<%= horizon_form_for @certification, url: {:action=>:update}, method: 'PATCH' do |f| %>

  <%= render 'fields', f: f %>

  <br />
  <div class="text-center">
    <%= link_to('返回', url_for(action: :show), :class=>"btn btn-large",:role=>"button") %>
    <%= f.submit '提交', class: 'btn btn-large red-btn' %>
  </div>
<% end %>
