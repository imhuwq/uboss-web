<% if current_user.is_supplier? and can? :manage, product %>
  <%= f.input :cost_price, input_html: { type: 'number' }, required: true %>
  <div class='form-group'>
    <label class='integer optional control-label'>
      建议价
    </label>
    <div class='control-input'>
      <%= f.input_field :suggest_price_lower, type: 'number' %>
      至
      <%= f.input_field :suggest_price_upper, type: 'number' %>
    </div>
  </div>
<% elsif current_user.is_agency? and can? :manage, product %>
  <div class='form-group'>
    <label class='integer optional control-label'>
      成本价
    </label>
    <div class='control-input'>
      <%= product.parent.cost_price %>
    </div>
  </div>
  <div class='form-group'>
    <label class='integer optional control-label'>
      建议价
    </label>
    <div class='control-input'>
      <%= product.parent.suggest_price_lower %>
      至
      <%= product.parent.suggest_price_upper %>
    </div>
  </div>
<% end %>
