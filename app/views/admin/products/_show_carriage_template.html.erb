<div class='select_carriage_template_wrapper'>
  <% if carriage.present? %>
    <div class='select_carriage_template'>
      <% ct_path = can_manage_supplier_product(@product) ? edit_admin_suppliers_carriage_template_path(carriage) : edit_admin_sellers_carriage_template_path(carriage) %>
      <%= link_to '修改', ct_path, class: 'prodcut_edit_carrage_template', target: '_blank' unless show %>

      <table class='table table-bordered'>
        <thead>
          <tr>
            <th colspan='5'><%= carriage.name %> </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>运送到</td>
            <td>首件(个)</td>
            <td>运费(元)</td>
            <td>续件(个)</td>
            <td>续费(元)</td>
          </tr>
          <% carriage.different_areas.each do |area| %>
            <tr>
              <td><%= area.regions.collect(&:name).join('、') %></td>
              <td><%= area.first_item %></td>
              <td><%= area.carriage %></td>
              <td><%= area.extend_item %></td>
              <td><%= area.extend_carriage %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
