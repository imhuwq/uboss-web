
<div class="row text-center">
  <div class="col-xs-3"></div>
  <div class="col-xs-2">
    <div>今日发布</div>
    <b style="font-size:3em;"><%= @statistics[:create_today] %></b>
  </div>
  <div class="col-xs-2">
    <div>总商品</div>
    <b style="font-size:3em;"><%= @statistics[:count] %></b>
  </div>
  <div class="col-xs-2">
    <div>库存紧张</div>
    <b style="font-size:3em;"><%= @statistics[:not_enough] %></b>
  </div>
</div>
<div class="row"><%= link_to("发布商品", url_for(:action=>:new), :class=>"btn btn-primary active",:role=>"button") %></div>
<hr>
<%= table_for(@products) do |t| %>
  <%= t.cell :name do |obj| %>
    <%= link_to [:admin, obj] do %>
      <%= image_tag(obj.asset_img.try(:avatar).try(:url), size: "100x80", alt: "-") %>
      <%= obj.name %>
    <% end %>
  <% end %>
  <%= t.cell :good_reputation do |obj| '-' end %>
  <%= t.cell :count %>
  <%= t.cell :total_sells do |obj| '-' end %>
  <%= t.cell :created_at %>
  <%= t.cell :methods do |obj| %>
    <%= link_to("编辑", url_for(:action=>:edit,:id=>obj.id)) %>
  <% end %>
<%- end %>
<%= paginate @products %>