<div class="row text-center">
  <div class="col-xs-3"></div>
  <div class="col-xs-2">
    <div>今日发布</div>
    <b style="font-size:3em;"><%= @statistics[:create_today] %></b>
  </div>
  <div class="col-xs-2">
    <div>总商品</div>
    <b style="font-size:3em;"><%= @statistics[:count] %></b>
  </div>
  <div class="col-xs-2">
    <div>库存紧张</div>
    <b style="font-size:3em;"><%= @statistics[:not_enough] %></b>
  </div>
</div>

<div class="row"><%= link_to("发布商品", url_for(:action=>:new), :class=>"btn btn-primary active",:role=>"button") %></div>

<hr>

<div id="index_list">
  <%= render partial: 'products', locals: { products: @products } %>
</div>

<%= paginate @products %>

<script type="text/javascript">
function delete_this(id) {
  var id = id
  console.log(id)
  var r=confirm("确定要删除么？")
  if (r==true) {
    $.ajax({
      url: '/admin/products/'+id+'/change_status',
      dataType: 'script',
      data: {id: id, status: 'closed'},
    });
  };
}
</script>
