	      <%# else %>
	        <%#= radio_button_tag('product[calculate_way]',1) %>
	      <%# end %>
	   	</label>
	    <div class='control-input'>
	      <%= f.input_field :share_rate_total, class: 'form-control' %>
	    </div>
	  </div>
