<div class="col-xs-12" style="border:1px solid black;margin-top:30px;padding-bottom:30px;">
  <h3 class="col-md-offset-1">商品信息</h3>
  <div class="col-xs-11  col-md-offset-1">
    <%= f.input :name,:as=>:string,:label_html=>{:class=>"text-right"} %>
    <%= f.input :original_price,:as=>:float,:label_html=>{:class=>"text-right"} %>
    <%= f.input :present_price,:as=>:float,:label_html=>{:class=>"text-right"} %>
    <%= f.input :count,:as=>:integer,:label_html=>{:class=>"text-right"} %>
    <div class="form-group">
        <%= f.label :asset_img,:class=>" text-right col-sm-3 control-label" %>
      <div  class="col-xs-6">
        <% if @product.present? and @product.asset_img.try(:avatar).try(:url).present? %>
          <img src="<%= @product.asset_img.try(:avatar).try(:url) %>" style="width:100%;">
        <% end %>
        <%= f.file_field :asset_img ,:name=>"asset_img" %>
      </div>
    </div>
  </div>

  <div class="text-center col-xs-12" style="border-bottom:3px solid grey;color:grey;margin-bottom:30px;margin-top:30px;">更多信息</div>
  <div class="row col-xs-10 col-md-offset-1">
    <div style="border-bottom:2px solid grey;margin:10px;">图文详情</div>
    <%= f.input_field :content,:as=>:text,:class=>"col-xs-12 redactor" %>
  </div>

</div>
<div class="col-xs-12" style="border:1px solid black;margin-top:30px;padding-bottom:30px;">
  <h3 class="col-md-offset-1">分成设置</h3>
  <div class="col-xs-11  col-md-offset-1">
    <div class="col-md-offset-1 col-xs-5">
      <div  class="col-xs-12">
        <% if @product.present? and @product.calculate_way == 1 %>
        <%= radio_button_tag('product[calculate_way]',1,:html=>{:checked=>'checked'}) %>
        <% else %>
        <%= radio_button_tag('product[calculate_way]',1) %>
        <% end %>
        <label style="padding-right:20px">分成比例</label>
        <%= f.input_field :share_rate_total %>%/单
      </div>
      <div  class="col-xs-12">
        <% if @product.present? and @product.calculate_way == 0 %>
        <%= radio_button_tag 'product[calculate_way]',0,:html=>{:checked=>'checked'} %>
        <% else %>
        <%= radio_button_tag 'product[calculate_way]',0 %>
        <% end %>
        <label style="padding-right:20px">现金分成</label>
        <%= f.input_field :share_amount_total %>元/单
      </div>
      <%#= f.input :calculate_way,as: :radio_buttons ,:collection=>Product::DataCalculateWay.invert,:item_wrapper_class => "radio-inline"%>
    </div>
    <div class="col-xs-6">
      <%= f.input :has_share_lv,as: :radio_buttons ,:collection=>{'不分成'=>0,'1'=>1,'2'=>2,'3'=>3},:item_wrapper_class => "radio-inline" %>
    </div>
    
  </div>
</div>
<div class="col-xs-12" style="border:1px solid black;margin-top:30px;padding-bottom:30px;">
  <h3 class="col-md-offset-1">物流及其他</h3>
  <div class="col-xs-11 col-md-offset-1">
    <%= f.input :buyer_pay, :as=>:select,:include_blank => false ,:collection=>Product::DataBuyerPay.invert,:label_html=>{:class=>"text-right"} %>
    <div class="clear"></div>
    <%= f.input :traffic_expense, :as=>:float,:include_blank => false ,:label_html=>{:class=>"text-right"} %>
  </div>
</div>

<script type="text/javascript">
$(document).on('ready page:load', function() {
  $('input[type=file]').change(function() {
    previewImage(this);
  });

  var previewImage = function(input) {
    var files = input.files;
    if (files && files[0]) {
      var image = files[0];

      var fileReader = new FileReader();
      fileReader.onload = function(event) {
        var dataURL = event.target.result;
        var imageTag = $(input).parent().find('img');

        if (imageTag.length == 0) {
          imageTag = $('<img>');
          imageTag.insertBefore($(input));
        }

        if (!imageTag.attr('width')) {
          imageTag.attr('width', '100%');
        }
        imageTag.attr('src', dataURL);
      };

      fileReader.readAsDataURL(image);
    }
  };
});
</script>
