
  <div class="row">
    <h3 class="col-md-offset-1">商品信息</h3>
      <div class="col-xs-6  col-md-offset-2">
        <%= f.input :name,:as=>:string,:label_html=>{:class=>"text-right"} %>
        <%= f.input :original_price,:as=>:float,:label_html=>{:class=>"text-right"} %>
        <%= f.input :present_price,:as=>:float,:label_html=>{:class=>"text-right"} %>
        <%= f.input :count,:as=>:integer,:label_html=>{:class=>"text-right"} %>
        <div class="form-group">
            <%= f.label :asset_img,:class=>" text-right col-sm-3 control-label" %>
          <div  class="col-xs-4">
            <%= f.file_field :asset_img ,:name=>"asset_img" %>
          </div>
        </div>
        <div class="clear"></div>
        <%= f.input :content,:as=>:text,:label_html=>{:class=>"text-right"} %>
      </div>
      <div class="col-xs-8 col-md-offset-1">
        
      </div>
    
  </div>
  <div class="row">
    <h3 class="col-md-offset-1">分成设置</h3>
    <div class="col-xs-6 col-md-offset-2">
      <table>
        <thead>
          <tr>
            <th width=100>分成方式：</th>
            <th width=180>购买分成：</th>
            <th width=180>分享分成：</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>一级分成：</td>
            <td><%= f.input_field :buyer_lv_1,:style=>"width:60px" %>%</td>
            <td><%= f.input_field :sharer_lv_1,:style=>"width:60px" %>%</td>
          </tr>
          <tr>
            <td>二级分成：</td>
            <td><%= f.input_field :buyer_lv_2,:style=>"width:60px" %>%</td>
            <td></td>
          </tr>
          <tr>
            <td>三级分成：</td>
            <td><%= f.input_field :buyer_lv_3,:style=>"width:60px" %>%</td>
            <td></td>
          </tr>
          <tr>
            <td>提现方式：</td>
            <td><%= f.input :buyer_present_way,:as=>:select,:collection=>Product::DataPresentWay.invert, :label=>false, :include_blank => false ,:input_html=>{:style=>"width:80px"} %></td>
            <td>
              <%= f.input :sharer_present_way,:as=>:select,:collection=>Product::DataPresentWay.invert, :label=>false,:include_blank => false ,:input_html=>{:style=>"width:80px"} %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <h3 class="col-md-offset-1">物流及其他</h3>
    <div class="col-xs-6 col-md-offset-2">
      <%= f.input :buyer_pay, :as=>:select,:include_blank => false ,:collection=>Product::DataBuyerPay.invert,:label_html=>{:class=>"text-right"} %>
      <div class="clear"></div>
      <%= f.input :traffic_expense, :as=>:float,:include_blank => false ,:label_html=>{:class=>"text-right"} %>
    </div>
  </div>




