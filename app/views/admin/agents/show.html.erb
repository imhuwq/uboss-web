<script>
$(document).ready(function(){
	$(".tab-title").click(function(){
		if(!$(this).hasClass("active")){
			$(".header-tab .tab-title").removeClass("active");
			$(this).addClass("active");
			$(".tab-content").hide();
			var tabid=$(this).attr("data-title");
			$(tabid).fadeIn();
		}
	})
})
</script>
