<div class="col-xs-12 bg-warning">
  <div class="col-xs-2">
    <%= link_to '创客信息', '###', class:"text-muted" %>
  </div>
  <div class="col-xs-2">
    <%= link_to '创客收益', '###' %>
  </div>
  <div class="col-xs-3 pull-right">
    <%= link_to "创客名：#{@agent.identify}", '###' %>
  </div>
</div>
<div class="row">
	<div class="col-xs-12 border_block">
		<h3 class="col-md-offset-1">基本信息</h3>
		<div class="col-xs-11 col-md-offset-1">
			<div class="form-group clearfix">
				<label class="string required text-right col-sm-3 control-label" for="product_name">
					<abbr title="必填">*</abbr>
					注册帐号
				</label>
				<div class="col-sm-9">
					<%= @agent.login %>
				</div>
			</div>
      <div class="form-group clearfix">
				<label class="string required text-right col-sm-3 control-label" for="product_name">
					<abbr title="必填">*</abbr>
					注册时间
				</label>
				<div class="col-sm-9">
					<%= @agent.created_at.to_date %>
				</div>
			</div>
		</div>
	</div>
  <div class="col-xs-12 border_block">
		<h3 class="col-md-offset-1">签订商家</h3>
		<div class="col-xs-11 col-md-offset-1">
			<div class="col-xs-2">
        <span>今日签约</span>
        <span style="font-size:2em;"><%= @agent.seller_today_joins.count %></span>
			</div>
      <div class="col-xs-2">
        <span>总共签约</span>
        <span style="font-size:2em;"><%= @agent.seller_total_joins.count %></span>
			</div>
		</div>
    <%= table_for(@agent.seller) do |t| %>
      <%= t.cell :seller_name do |obj| %>
        <%= link_to obj.identify, url_for(controller: 'admin/users', action: :show, id: obj) %>
      <% end %>
      <%= t.cell :created_at %>
      <%= t.cell :share_rate do |obj| %>
        <%= obj.user_info.service_rate %>%
      <% end %>
      <%= t.cell :income do |obj| %>
        <%= obj.user_info.income %>
      <% end %>
    <%- end %>
	</div>
  <div class="col-xs-12 border_block">
		<h3 class="col-md-offset-1">提现记录</h3>
    TODO
	</div>
</div>
