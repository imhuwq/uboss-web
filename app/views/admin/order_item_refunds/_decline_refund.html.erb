<div class="modal fade" id="decline-refund-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document" style="margin:15% auto;width:60%;height:50%;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span class='close' aria-hidden="true">&times;</span></button>
        <h5 class="modal-title" id="myModalLabel" style="text-align:center;">拒绝退款申请</h5>
      </div>

      <%= horizon_form_for @refund_message, url: declined_refund_admin_order_item_order_item_refund_path(@order_item, @order_item_refund) do |f| %>
        <%= render 'fields', f: f, reasons: (@order_item.refund_state == "refund" ? RefundMessage::DECLINE_REFUND : RefundMessage::DECLINE_RETURN) %>
      <% end %>

    </div>
  </div>
</div>
