<div class="container admin-container">
  <ul class="breadcrumb">
    <li><a href="/admin">主页</a></li>
    <li class="divider"><i class="fa fa-caret-right"></i></li>
    <li>分组</li>
  </ul>
</div>

<br />

<div class="container  mod-inner">

  <div class="list-search-bar">
    <%= link_to("+ 添加分组", url_for(:action=>:new, dishes: @dishes), :class=>"btn btn-large",:role=>"button") %>
  </div>

  <br />

  <% if @dishes == 'true' %>
    <%= render partial: 'dishes_categories_table', locals: { categories: @categories, has_many_categories: @has_many_categories } %>
  <% else %>
    <%= render partial: 'categories', locals: { categories: @categories } %>
  <% end %>

</div>
