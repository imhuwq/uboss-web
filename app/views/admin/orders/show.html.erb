<div class="container admin-container">
	<ul class="breadcrumb">
		<li><a href="/admin">主页</a></li>
		<li class="divider"><i class="fa fa-angle-right"></i></li>
		<li><%= link_to '订单', [:admin, :orders] %></li>
		<li class="divider"><i class="fa fa-caret-right"></i></li>
		<li class="active">订单详情</li>
	</ul>
</div><!-- container -->
<br />
<div class="container admin_orders_show_order_wrapper">
	<div class="admin-border no-border">
		<div class="box-w100">
      <span class="order-info-state label label-default"><%= @order.state_i18n %></span>
      <% if @order.may_close? %>
        <%= link_to '关闭交易', modal_close_admin_order_path(@order), class: 'btn btn-sm' , remote: true %>
      <% end %>
      <div class='buyer-info'>
        <span>买家 : <%= @order.buyer_identify %><span>
        <%= link_to '联系买家', nil, class: 'contact-buyer' %>
      </div>
		</div>
  </div>

  <%= render partial: 'order_info', locals: { obj: @type, order: @order } %>
</div>
