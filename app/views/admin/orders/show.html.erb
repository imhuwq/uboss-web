<div class="container admin-container">
	<ul class="breadcrumb">
		<li><a href="/admin">主页</a></li>
		<li class="divider"><i class="fa fa-angle-right"></i></li>
		<li><%= link_to '订单', [:admin, :orders] %></li>
		<li class="divider"><i class="fa fa-caret-right"></i></li>
		<li class="active">订单详情</li>
	</ul>
</div><!-- container -->
<br />
<div class="container">
	<h3 class="page-title">订单信息 <small class="pull-right"><%= @order.state_i18n %></small></h3>
	<div class="admin-box">
		<div class="box-w50">
			<p>订单编号：<%= @order.number %></p>
	    <p>运费：<%= @order_item.product_traffic_expense %></p>
	    <p>合计：<%= @order.pay_amount %></p>
		</div>
		<div class="box-w50">
			<p>买家：<%= @order.buyer_identify %></p>
	    <p>下单时间：<%= @order.created_at %></p>
		</div>
	</div><!-- admin-box -->
  <br />
  <h3 class="page-title">订购商品</h3>
  <div class="admin-box">
    <div class="box-w50">
	    <p>商品名称：<%= @order_item.product_name %></p>
	    <p>购买数量：<%= @order_item.amount %></p>
    </div>
    <div class="box-w50">
	    <p>实际单价：<%= number_to_currency @order_item.present_price %></p>
	    <p>分享优惠：<%= number_to_currency @order_item.privilege_amount %></p>
	    <p>成交单价：<%= number_to_currency @order_item.deal_price %></p>
    </div>
  </div>
	<br />
	<h3 class="page-title">付款信息 </h3>
	<div class="admin-box">
		<div class="box-w100">
      <p>付款方式：<%= @order.payment_i18n %></p>
      <p>付款金额：<%= number_to_currency @order.pay_amount %></p>
      <p>付款时间：<%= @order.paid_at %></p>
		</div>
	</div><!-- admin-box -->
	<br />
	<h3 class="page-title">
		发货信息
		<% if @order.payed? && can?(:manage, @order) %>
		  <%= link_to '发货', [:ship, :admin, @order],
		    class: 'btn', method: :PATCH, data: { confirm: 'Are your sure?' } %>
		<%- end %>
	</h3>
	<div class="admin-box">
    <div class="box-w100">
      <p>收货人：<%= @order.username %></p>
      <p>联系电话：<%= @order.mobile %></p>
      <p>收货地址：<%= @order.address %></p>
    </div>
	</div><!-- admin-box -->
  <br />
  <h3 class="page-title">收益&分成</h3>
  <div class="admin-box">
    <div class="box-w100">
      <p>营收：<%= number_to_currency @order.pay_amount %></p>
      <p>收益：<%= number_to_currency @order.income %></p>
      <p>创客分成：<%= number_to_currency @order.divide_incomes.sum(:amount) %> </p>
      <p>分享分成：<%= number_to_currency @order.sharing_incomes.sum(:amount) %></p>
    </div>
  </div>
</div>
