<div class="container  admin-container">
	<ul class="breadcrumb">
		<li><a href="/admin">主页</a></li>
		<li class="divider"><i class="fa fa-caret-right"></i></li>
		<li>订单</li>
	</ul>
</div><!-- container -->
<br />
<div class="container nogap">
	<div class="box-w25">
		<div class="admin-box red-bg-color">
			<h4>等待发货</h4>
			<h1 class="num"><%= @unship_amount %></h1>
		</div>
	</div>
	<div class="box-w25">
		<div class="admin-box main-bg-color">
			<h4>今日订单数</h4>
			<h1 class="num"><%= @today_selled_amount %></h1>
		</div>
	</div>
	<div class="clear"></div>
	<br />
	<div class="box-w100">
    <%= simple_form_for Order.new, url: select_orders_admin_orders_path, remote: true do |f| %>
      <table class="list-table">
        <thead>
          <th>
            <label class='select_all_orders'>
              <%= check_box_tag 'select_all', 'select_all'%>
              <span>全选/取消全选</span>
            </label>
            <%= f.submit '批量发货', class: 'btn' %>
          </th>
          <th>订单时间</th>
          <th>订单编号</th>
          <th>买家</th>
          <th>状态</th>
          <th>操作</th>
        </thead>
        <% @orders.each do |order| %>
          <tr>
            <td class='order_check_box'>
              <label><%= check_box_tag 'ids[]', order.id, false, disabled: !order.may_ship?, class: "check_box_tag" %></label>
          </td>
            <td><%= order.created_at %></td>
            <td><%= link_to order.number, [:admin, order] %></td>
            <td><%= order.buyer_identify %></td>
            <td><%= order.state_i18n %></td>
            <td>
              <% if order.payed? && can?(:manage, order) %>
                <%= link_to '发货', [:ship, :admin, order],
                 class: 'btn', remote: true %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    <% end %>
		<br />
		<%= paginate @orders %>
	</div>
</div><!-- container-->
<br />
