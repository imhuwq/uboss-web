<% if @product_copy.valid? %>
  if($(".agency-product-action-<%= @product.id %> a").hasClass("btn-large")){
    btn_class = "btn-large"
  }
  else{
    btn_class = "btn-mid"
  }
  $(".agency-product-action-<%= @product.id %>").html("<a class='btn "+btn_class+" yellow-btn' disabled>已添加到店铺</a>")
<% else %>
  alert('添加到店铺失败！')
<% end %>
