<%= link_to "添加银行卡", new_admin_bank_card_path, class: 'btn btn-primary' %>
<hr />
<%= table_for @bank_cards do |t| %>
  <%= t.cell :username %>
  <%= t.cell :bankname %>
  <%= t.cell :number %>
  <%= t.cell :action do |bank_card| %>
    <%= link_to "删除", [:admin, bank_card], method: :delete, data: {confirm: '确定删除?'}, class: 'text-danger' %>
  <% end %>
<% end %>
