<script>
$(window).load(function(){
	$(".pop-img").click(function(){		
		$("body").append("<div class='pop-bg'><div class='pop-container' style='margin-top:-"+($(this).children("img").height()+20)/2+"px;margin-left:-"+($(this).children("img").width()+20)/2+"px'><div class='pop-content'><img src='"+$(this).attr("data-src")+"'/><div class='pop-close'><i class='fa fa-times'></i></div></div></div></div>");
		$("html").addClass("pop-html");		
	})
	$("body").on("click",".pop-bg .pop-close",function(){		
		$(".pop-bg").remove();
		$("html").removeClass("pop-html");
	}) 
})
$(document).ready(function(){
	$(".tab-title").click(function(){
		if(!$(this).hasClass("active")){
			$(".header-tab .tab-title").removeClass("active");
			$(this).addClass("active");
			$(".tab-content").hide();
			var tabid=$(this).attr("data-title");
			$(tabid).fadeIn();
			$(tabid).find(".date-select").chosen();
		}
		
	})
})	

	

	
</script>
