<div class="container">
	<ul class="breadcrumb">
		<li>主页</li>
		<li class="divider"><i class="fa fa-caret-right"></i></li>
		<li>商家</li>
	</ul>
</div>
<br />
<div class="container nogap">
	<div class="box-w80 nogap">
	  <div class="box-w25">
	  	<div class="admin-box main-bg-color">
				<h4>今日入住商家</h4>
				<h1 class="num"><%= current_user.seller_today_joins.count %></h1>
			</div>
			<br />
	  </div><!-- box-w25 -->
	  <div class="box-w25">
	  	<div class="admin-box yellow-bg-color">
				<h4>待审核商家</h4>
				<h1 class="num"><%= current_user.seller_total_joins.group(:authenticated).count[0] || 0 %></h1>
			</div>
			<br />    
	  </div><!-- box-w25 -->
	  <div class="box-w25">
	  	<div class="admin-box red-bg-color">
				<h4>总签约商家</h4>
				<h1 class="num"><%= current_user.seller_total_joins.count %></h1>
			</div>
			<br />    
	  </div><!-- box-w25 -->
	  <div class="box-w25">
			<div class="admin-box blue-bg-color">
				<h4>我的创客邀请码</h4>
				<h1 class="num"><%= current_user.find_or_create_agent_code %></h1> 
			</div> 
			<br />
		</div><!-- box-w25 -->
		<div class="box-w100">
			<div class="admin-box">
				<h4>我的商家绑定链接:</h4>
			  <div class="text"><%= new_seller_url(agent_code: current_user.agent_code) %></div>
			</div> 
			<br />
		</div><!-- box-w100 --> 
	</div> <!-- box-w80 -->
	<div class="box-w20">
		<div class="qrcode-box text-center">
			<h4>商家绑定二维码</h4>
			<img src="http://qr.liantu.com/api.php?&amp;text=<%= new_seller_url(agent_code: current_user.agent_code) %>"/>
		</div>
	</div>
</div>

<div class="container">
	<div class="header-scoller text-center">
		<div class="box-w25">商家</div>
		<div class="box-w10">好评率</div>
		<div class="box-w10">提成比例</div>
		<div class="box-w25">入驻时间</div>
		<div class="box-w10">账号</div>		
		<% if current_user.super_admin? %>
			<div class="box-w10">创客</div>
			<div class="box-w10">
		<% else %>
			<div class="box-w20">
		<% end %>				
		状态</div>
		<div class="clear"></div>
	</div>
	<div id="scroller">
		<div class="scroller-container">
			<% @sellers.each do |sellers| %>	
			<div class="admin-list-box text-center
				<% if sellers.authenticated == 'no' %>
					red-bg-color					
				<% end %>
			">			
				<div class="box-w25 admin-info">
					<%= link_to url_for(controller: 'admin/sellers', action: :show, id: sellers) do %>
						<div class="cover"><%= image_tag(sellers.avatar, size: "60x60", alt: "-") %></div>						
						<div class="name"><%= sellers.identify %></div>
					<% end %>
				</div>
				<div class="box-w10">
					<%= Evaluation.sharer_good_reputation_rate(sellers) %>
				</div>
				<div class="box-w10"><%= sellers.user_info.try(:service_rate) %></div>					
				<div class="box-w25"><%= sellers.created_at %></div>
				<div class="box-w10"><%= sellers.login %></div> 
				<% if current_user.super_admin? %>
					<div class="box-w10">
						&nbsp;
						<% if sellers.agent.present? %>
				          <%= link_to sellers.agent.identify, url_for(controller: :agents, action: :show, id: sellers.agent_id) %>
				        <% end %>
				        &nbsp;
					</div>
					<div class="box-w10">
				<% else%>
					<div class="box-w20">
			    <% end %>
				    <%=  User::DATA_AUTHENTICATED[sellers.authenticated] %>
				</div>
			</div>	    
			<% end %>
			
		</div><!-- srcoller -->
		<div class="scroller-bar-wrapper">
	        <div class="scroller-bar"></div>
	 	</div><!-- scroller__bar-wrapper -->
 	</div><!-- scroller -->
    <%= paginate @sellers %>
</div>
<script>
	window.onload = function() {
    window.dima = baron({
        root: '#scroller',
        scroller: '.scroller-container',
        bar: '.scroller-bar',
        barOnCls: 'baron'
    });

};
	
</script>
