<%= render 'public' %>

<br />
<div class="container">
	<div class="header-tab">
		<%= link_to "验证明细", admin_verify_codes_path, class:"tab-title" %>
		<div class="tab-title active">团购统计</div>
	</div>
</div>
<br />

<div class="container">
  <table class="list-table" id="statistics">
    <thead>
      <tr>
        <th>团购名称</th>
        <th>现价</th>
        <th>实付款</th>
        <th>今日验证数量</th>
        <th>总验证数量</th>
        <th>团购有效期</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |item| %>
        <tr>
          <td class="text-left">
            <%= link_to '#' do %>
              <%= image_tag(item.product.image_url(:thumb), size: "80x80", alt: "-") %>　
              <%= item.product.name %>
            <% end %>
          </td>
          <td><%= item.product.present_price %></td>
          <td></td>
          <td><%= item.verify_codes.today(current_user).size %></td>
          <td><%= item.verify_codes.total(current_user).size %></td>
          <td>截止至<%= (item.product.created_at + item.product.monthes.to_i.months).to_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
