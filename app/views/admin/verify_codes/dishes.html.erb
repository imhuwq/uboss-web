<%= render 'public' %>

<br />
<div class="container">
	<div class="header-tab">
		<%= link_to "验证明细", admin_verify_codes_path, class:"tab-title" %>
		<%= link_to "商品统计", statistics_admin_verify_codes_path, class:"tab-title" %>
		<div class="tab-title active">菜品统计</div>
	</div>
</div>
<br />

<div class="container">
  <table class="list-table" id="statistics">
    <thead>
      <tr>
        <th>菜品名称</th>
        <th>现价</th>
        <th>今日销量</th>
        <th>总验销量</th>
      </tr>
    </thead>
    <tbody>
      <% @dishes.each do |product| %>
        <tr>
          <td class="text-left">
					  <%= link_to admin_dishes_product_path(product) do %>
              <%= image_tag(product.image_url(:thumb), size: "80x80", alt: "-") %>　
              <%= product.name %>
            <% end %>
          </td>
          <td><%= product.present_price %></td>
          <td><%= product.today_verify_code_count %></td>
          <td><%= product.total_verify_code_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
