<div class="index_list">
  <table class="list-table" id="calling_notifies">
		<thead>
			<th>桌号</th>
			<th>服务类型</th>
			<th>呼叫时间</th>
			<th>操作</th>
		</thead>
		<% calling_notifies.each do |calling_notify| %>
			<tr class="calling_notify" data-number="<%= calling_notify.calling_number %>">
				<td><%= calling_notify.calling_number %></td>
				<td><%= calling_notify.service_name %></td>
				<td><%= calling_notify.called_at %></td>
				<td>
          <% if can? :update, CallingNotify %>
            <% if calling_notify.unservice? %>
              <p>
                <%= link_to("去服务", change_status_admin_calling_notify_path(calling_notify, status: 'servicing'),
                remote: true, method: :patch, data: { disable_with: '<i class="fa fa-spinner"></i>', text: '去服务' },
                class: "btn btn-mid change-status-btn") %>
              </p>
            <% elsif calling_notify.serviced? %>
              <p><span>已服务</span></p>
            <% else %>
              <p>
                <%= link_to("已服务", change_status_admin_calling_notify_path(calling_notify, status: 'serviced'),
                remote: true, method: :patch, data: { disable_with: '<i class="fa fa-spinner"></i>', text: '已服务' },
                class: "btn btn-mid white-btn btn-border change-status-btn") %>
              </p>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
