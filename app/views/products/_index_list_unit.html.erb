<% @products.each_with_index do |product, index| %>
    <%= link_to product_path(product) do %>
    <li class="list_li">
      <div class="li_image">
        <%= image_tag(product.image_url(:w320),  alt: "-") %>
        </div>
        <div class="li_content">
          <div class="li_contentinteo">
            <div class="con_title"><%= product.name %></div>
            <div class="intrdu"><%= product.short_description %></div>
            <div class="baoyou">邮费：<%= Product::DataBuyerPay[product.buyer_pay] %></div>
            <div class="pric"><strong>￥<%= product.present_price %></strong><span><%= product.total_sells %>人付款</span></div>
          </div>
          <% if index < 5 %>
          <div class="posi_left">
            <ul>
              <li class="col_on">荐</li>
              <li class="col_one">TOP</li>
            </ul>
          </div>
          <% end %>
       </div>
    </li>
    <% end %>
  <% end %>
