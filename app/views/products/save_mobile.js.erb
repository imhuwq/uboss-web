// 向页面插入分享按钮
$('#share_buttons').html('<%= escape_javascript render :partial =>'/application/share_buttoms.html' %>');

// jiathis的js包
var script = document.createElement("script");
script.type = "text/javascript";
script.src = "http://v3.jiathis.com/code/jia.js";
document.body.appendChild(script);


// 分享的内容
var config = document.createElement("script");
<% if @sharing_link_node.present? %>
var shared_url = 'http://<%= "#{request.env["HTTP_HOST"]}/sharing/#{@sharing_link_node.code}" %>'
<% else %>
var shared_url = 'http://<%= "#{request.env["HTTP_HOST"]}/products/#{@product.id}" %>'
<% end %>

config.type = "text/javascript";
config.innerHTML = 'var jiathis_config = { url: \'' + shared_url +'\', title: "<%= @product.try(:name) %>", summary:"原价：￥<%= @product.try(:original_price) %>,现价：￥<%= @product.try(:present_price) %>,快来抢购吧~"} '
document.body.appendChild(config);


$('#save_mobile_mobile').attr('disabled','disabled')
$('#save_mobile_submit').attr('disabled','disabled')

var share_content = "url="+shared_url+"&type=3&pic=<%= @product.image_url %>&title=<%= @product.try(:name) %>:原价：￥<%= @product.try(:original_price) %>,现价：￥<%= @product.try(:present_price) %>,快来抢购吧~&appkey="
<% if @job == 'sina' %>
window.open("http://service.weibo.com/share/share.php?" + share_content)
<% elsif @job == "tqq" %>
window.open("http://share.v.t.qq.com/index.php?c=share&a=index&" + share_content)
<% elsif @job == "copy" %>
  $('#share_link').show();
<% end %>
