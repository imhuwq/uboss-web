<div class="row">
  <div class="col-xs-12 text-center" style="padding:10px; 0">
    <%= link_to url_for(:action=>:index) do %>
    <div class="col-xs-2" style="font-size:1.5em;">
      <%= link_to("<", url_for(:action=>:index)) %>
    </div>
    <% end %>
    <div class="col-xs-8" style="font-size:2em;">
      <h1>商品详情</h1>
    </div>
  </div>
</div>
<div class="row"  style="font-size:2em">
  <div class="col-xs-12">
    <%= image_tag(url_for(@product.asset_img.try(:avatar).try(:url)),  alt: "-",:style=>"width:100%;") %>
  </div>
  
  <div class="col-xs-12" style="padding:10px 3%;">
    <div class="col-xs-12 font_h3" style="border-bottom:1px solid gray;padding:2%;">
      <%= @product.name %>
    </div>
    <span class="font_h2">
     ￥<%= @product.present_price %>
    </span>
    <span  class="font_h4" style="text-decoration:line-through;color:gray;">
      ￥<%= @product.original_price %>
    </span>
  
    <div class=" font_h4" style="color:gray;">
      <%= Product::DataBuyerPay[@product.buyer_pay] %>
      <% if @product.buyer_pay %>
      <%= ":￥#{@product.traffic_expense}" %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 text-center font_h3" style="margin:0; border:1px solid;">
    图文详情
  </div>
  
  <div class="col-xs-12 font_h3" style="padding:2% 3%">
    <%= raw @product.content %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12" style="padding:1%">
    
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <% if params.present? and params['shared'] == 'true' %>
      <%= simple_form_for "mobile_auth_code",:wrapper=>:inline_form do |f| %>
        <div class="col-xs-12">
          
          <%= f.input :mobile,hint:"留下手机号，现金礼品拿不停~",:placeholder=>"手机号" %>
        </div>
      <% end %>

      <div class="col-xs-12">

        <!-- JiaThis Button BEGIN -->
        <div class="jiathis_style_32x32 col-xs-12 text-center" style="display:none;padding-bottom:30px;">
          <div class="col-xs-12" style="padding:10px;">分享到：</div>
          <a class="jiathis_button_qzone"></a>
          <a class="jiathis_button_tsina"></a>
          <a class="jiathis_button_tqq"></a>
          <a class="jiathis_button_weixin"></a>
          <a href="http://www.jiathis.com/share" class="jiathis jiathis_txt jtico jtico_jiathis" target="_blank"></a>
        </div>
        <!-- JiaThis Button END -->

      </div>

      <script type="text/javascript">
      $(document).on('ready page:load', function() {
        var mobile = ''
        $("#mobile_auth_code_mobile").on('keyup', this, function(event) {
          mobile = event.target.value
          var checkNum = /^(\+\d+-)?[1-9]{1}[0-9]{10}$/;
          if (checkNum.test(mobile)) {
            $(".jiathis_style_32x32").fadeIn('fast', function() {


              var script = document.createElement("script");

        　　　　script.type = "text/javascript";

        　　　　script.src = "http://v2.jiathis.com/code/jia.js";

        　　　　document.body.appendChild(script);  



              var config = document.createElement("script");

              config.type = "text/javascript";

              config.innerHTML = 'var jiathis_config = { url: \'http://<%= "#{request.env["HTTP_HOST"]}/products/#{@product.id}:mobile=" %>' + mobile+'\', title: <%= @product.name %>, summary:<%= @product.name %>} '
              document.body.appendChild(config); 

            });
           

          };
        });

      })
      </script>

      
    <% end %>
  </div>
</div>
<div class="row">
  <%= link_to '###' do %>
  <div class="btn active col-xs-12 btn-lg btn-default font_h3" style="">
    立即购买
  </div>
  <% end %>
</div>

<script type="text/javascript">
$(".jiathis_style_32x32 a").on('click', this, function(event) {
  var mobile = $("#mobile_auth_code_mobile").val()
  console.log(mobile)
  $.ajax({
    url: '/products/save_mobile',
    type: 'POST',
    dataType: 'json',
    data: {mobile: mobile},
  })
  .done(function() {
    console.log("success");
  })
  .fail(function() {
    console.log("error");
  })
  .always(function() {
    console.log("complete");
  });
  
});
</script>