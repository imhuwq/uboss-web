<div class="index_banner" id="index_banner">
	<div class="index_banner_m">
		<%= image_tag "desktop_image/header.png" %>
	</div>
</div>
	<div class="container">
		<div class="page1" id="page1">
			<div class="page1_cont">
				<div class="line"><span class="span_title">平台价值</span></div>
					<div class="page1_cont_dl">
						<dl class="page1_cont_list" >
							<dt class="wow lightSpeedIn">
								<%= image_tag "desktop_image/page_img_1.png", alt:"many fans",class:"img_animation" %>
							</dt>
							<dd class="page1_cont_title" alt>海量忠诚粉丝</dd>
							<dd class="page1_cont_pro">为品牌迅速聚拢大量忠诚用户</dd>
						</dl>
						<dl class="page1_cont_list">
							<dt class="wow shake"><%= image_tag "desktop_image/page_img_2.png", alt:"quick join", class:"img_animation" %></dt>
							<dd class="page1_cont_title">快速引流</dd>
							<dd class="page1_cont_pro">一键分享社交网络，社交平台 强关系快速引流</dd>
						</dl>
						<dl class="page1_cont_list page1_cont_last">
							<dt class="wow lightSpeedIn"><%= image_tag "desktop_image/page_img_3.png", alt:"sell 2nd", class:"img_animation" %></dt>
							<dd class="page1_cont_title">二次销售</dd>
							<dd class="page1_cont_pro">增加商品曝光度，扩大品牌 影响力，让您的销售额迅猛 飙升</dd>
						</dl>
					</div>
			</div>
		</div>
		<div class="page2" id="page2">
			<div class="page2_cont">
				<div class="page3_cont">
				<div class="page3_title"><span class="page3_titles">平台优势</span></div>
				<div class="page3_img_m">
					<%= image_tag "desktop_image/page2_img.png", alt:"平台优势" %>
				</div>
			</div>

			</div>
		</div>
	<div class="page3" id="page3">
		<div class="page3_cont">
			<div class="page3_title"><span class="page3_titles">产品流程</span></div>
			<div class="page3_img_m">
				<%= image_tag "desktop_image/page3_img.png", alt:"产品流程" %>
			</div>
		</div>
	</div>
	<div class="page3" id="page4">
		<div class="page4_cont">
			<div class="page4_title"><span class="page4_titles">简单两步拥有UBOSS商铺</span></div>
			<div class="page4_cont_dl">
				<dl class="page4_cont_list">
					<dt class="wow slideInLeft" data-wow-duration="1s"><%= image_tag "desktop_image/openShop.png", alt:"openShop" %></dt>
					<dd class="page4_cont_title1">
						<%= link_to '/sellers/new' do %>
						<%= image_tag "desktop_image/openShopBtn.png", alt:"openShop" %>
						<% end %>
					</dd>
				</dl>
				<dl class="page4_cont_list">
					<dt class="wow slideInRight" data-wow-duration="1s"><%= image_tag "desktop_image/toApprove.png", alt:"shop" %></dt>
					<dd class="page4_cont_title2">
						<%= link_to '/admin/personal_authentications' do %>
						<%= image_tag "desktop_image/toApproveBtn.png", alt:"toApprove" %>
						<% end %>
					</dd>
				</dl>
			</div>
		</div>
	</div>
</div>
