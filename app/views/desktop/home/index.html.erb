<div class='header_img_con'>
	<%= image_tag "desktop_image/header3.jpg", class:"header_img", alt:"header" %>
</div>
<div class="page_video" >
	<div class="video_list"  onclick="showVideo()">
		<%=image_tag "desktop_image/playVideo.png", alt:"playVideo" %>
	</div>
</div>
<!--弹框-->
<div id="video">
				<iframe style="z-index: 1;" allowfullscreen="" frameborder="0" ></iframe>
				<!-- <input  type="button" value="Close" onclick="hideVideo();"/> -->
				<%= image_tag "desktop_image/cancel.png", alt:"cancle", onclick:"hideVideo()" %>
</div>
<div class="page1">
	<div class="page_title"><span class="page_titles">平台价值</span></div>
	<div class="page1_content">
		<div class="img">
			<%= image_tag "desktop_image/page_img_1.png", class:"wow lightSpeedIn" %>
		</div>
		<div class="img">
			<%= image_tag "desktop_image/page_img_2.png", class:"wow shake" %>
		</div>
		<div class="img">
			<%= image_tag "desktop_image/page_img_3.png", class:"wow lightSpeedIn" %>
		</div>
	</div>
</div>
<div class="page2" id="page2">
	<div class="page2_cont">
		<div class="page_title"><span class="page_titles">平台优势</span></div>
		<div >
			<%= image_tag "desktop_image/page2_img.png", class:"page2_img_m", alt:"平台优势" %>
		</div>
	</div>
</div>
<div class="page3" id="page3">
	<div class="page_title"><span class="page_titles">产品流程</span></div>
	<div >
		<%= image_tag "desktop_image/page3_img.png", class:"page3_img_m", alt:"产品流程" %>
	</div>
</div>
<div class="page4" id="page4">
		<div class="page4_title"><span class="page4_titles">简单两步拥有UBOSS商铺</span></div>
		<div class="page4_cont_dl">
			<dl class="page4_cont_list">
				<dt class="wow slideInLeft" data-wow-duration="1s"><%= image_tag "desktop_image/openShop.png", alt:"openShop" %></dt>
				<dd class="page4_cont_btn">
					<%= link_to '/sellers/new' do %>
					<%= image_tag "desktop_image/openShopBtn.png", alt:"openShop" %>
					<% end %>
				</dd>
			</dl>
			<dl class="page4_cont_list">
				<dt class="wow slideInRight" data-wow-duration="1s"><%= image_tag "desktop_image/toApprove.png", alt:"shop" %></dt>
				<dd class="page4_cont_btn">
					<%= link_to "/admin/users/#{current_user.try(:id) || 1}/personal_authentication/new" do %>
					<%= image_tag "desktop_image/toApproveBtn.png", alt:"toApprove" %>
					<% end %>
				</dd>
			</dl>
		</div>
</div>
<script type="text/javascript" >
			function showVideo(){
				$("#video").css('display','block');
				// $('#closeVideo').css('display','block');
			}
			function hideVideo(){
				$("#video").css('display','none');
				// $('iframe').remove();
				// $('#closeVideo').css('display','none');
			}
</script>
