<%= content_for :page_title do %>
  <%= @seller.store_identify %>
<% end %>
<div class="banner-slider">
  <div id='slider' class='swipe'>
    <div class='swipe-wrap'>
      <div>
      	<a href="/lady" class="text-center"> <%= image_tag 'mobile/slideshow/1.jpg' %></a>
        <!--<a href="/" class="img-100-200" style="background-image:url('<%= asset_path("mobile/slideshow/1.jpg") %>') ;"></a> -->
      </div>
      <div>
        <a href="/maca" class="text-center"> <%= image_tag 'mobile/slideshow/2.jpg' %></a>
      </div>
      <div>
        <a href="/snacks" class="text-center"> <%= image_tag 'mobile/slideshow/3.jpg' %></a>
      </div>
    </div>
  </div>
  <div id='slider-points'>
    <span class='active'>*</span>
    <span>*</span>
    <span>*</span>
  </div>
</div>

<% if not @hide_hot_box %>
  <div class="store-like">
    <div class="box border-box">
      <div class="box-w100">
        <div class="page-title like-color">热销商品</div>
      </div>

      <%= render partial: 'hot_product', collection: @hots, as: :product %>

      <div class="box-w10">
        <%= link_to hots_store_path(@seller) do %>
          <%= image_tag 'mobile/arrow-right.png',class:'like-more' %>
        <% end %>
        <!-- 设置链接 -->
      </div>
    </div>
  </div>
<% end %>

<div class="box store-list">
	<div class="box-w100">
    <% if @hide_hot_box %>
      <div class="page-title like-color">热销商品</div>
    <% else %>
      <div class="page-title">全部商品</div>
    <% end %>
	</div>

  <%= render partial: 'product', collection: @products %>

</div>

<div id="load-more" data-container='.store-list' data-ele='.p-item' data-ref='<%= request.path %>'>加载更多</div>
