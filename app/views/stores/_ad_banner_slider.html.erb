<% if store_banner_data(seller).size > 0 %>
  <div class="ad-banner-slider">
    <div id='ad-slider' class='swipe'>
      <div class='swipe-wrap'>
        <% store_banner_data(seller).each do |image, product| %>
          <div>
            <% if product.present? %>
              <%= link_to product do %>
                <%= image_tag image.url(:w640) %>
              <% end %>
            <% else %>
              <%= image_tag image.url(:w640) %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
