<% cache ['store-product', product], expires_in: 1.day do %>
<% orderdata = @order_column_name ? product.try(@order_column_name.to_sym) : product.try(:updated_at) %>
  <div class="box-w50 p-item" orderdata="<%= orderdata %>">
    <div class="product-box">
      <div class="cover">
        <%= link_to '', product,
          style: "background-image:url(#{product.image_url(:w320)})",
          class:'img',
          title:"#{product.name}" %>
        <%= image_tag("mobile/img.jpg") %>
      </div>
      <div class="title"><%= product.name %></div>
      <div class="price">ï¿¥<%= product.min_price %> </div>
    </div><!-- product-box -->
  </div><!-- box-w50 -->
<% end %>
