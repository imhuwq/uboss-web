<div class='login-container'>

  <h3><%= @email %></h3>
  <h3><small>验证成功</small></h3>

  <%= form_tag user_registration_path do %>

    <%= hidden_field_tag :regist_type, 'email' %>
    <%= hidden_field_tag :confirmation_token, params[:confirmation_token] %>

    <input class="input-block" type="password" name="password" id="password" placeholder='请输入密码' value="" />
    <br />
    <%= submit_tag '确定', class: 'btn btn-large btn-block' %>
    <br />
    <p>
    <input type="checkbox" checked disabled />
    <small>同意<a class="main-color" href="<%= agreements_register_path %>" target='_blank'>《UBOSS用户注册协议》</a></small>
    </p>
    <%= link_to "取消", root_path, class: 'btn btn-block btn-link' %>
  <% end %>
</div>
