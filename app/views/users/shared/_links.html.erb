<%- if controller_name != 'sessions' %>
  <%= link_to "登录", new_session_path(resource_name), class: 'btn btn-block btn-link' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "注册", new_registration_path(resource_name), class: 'btn btn-block btn-link' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "忘记密码?", new_user_password_path, class: 'btn btn-block btn-link' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "没有收到邮箱确认邮件?", new_confirmation_path(resource_name), class: 'btn btn-block btn-link' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "没有收到账号解锁邮件?", new_unlock_path(resource_name), class: 'btn btn-block btn-link' %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if provider.to_s != 'wechat' %>
      <%= link_to "使用#{provider.to_s.titleize}登录", omniauth_authorize_path(resource_name, provider), class: 'btn btn-block btn-link' %><br />
    <% end %>
  <% end -%>
<% end -%>
