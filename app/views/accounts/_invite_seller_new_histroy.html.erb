<% @histroys.each do |obj| %>
  <tr>
    <td>
    	<p><%=  truncate (obj.mobile),:length=>15,:omission=>'...'  %></p>
    	<% if(obj.note?) %>
    	<p>备注：<%=truncate (obj.note),:length=>15,:omission=>'...'  %></p>
    	<% end %>
    </td>
    <td>
      <%= obj.created_at.strftime('%m/%d') %>
    </td>
    <td class="text-right">
      <span class="label label-<%= obj.status%>"><%= obj.status_i18n %></span>
    </td>
    <td class="text-right nogap">
      <%= link_to edit_seller_note_account_path(id: obj.id) do %>
        <%= image_tag("mobile/edit.png" ) %>
      <% end %>
    </td>
  </tr>  
<% end %>
