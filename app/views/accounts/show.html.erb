<%= content_for :page_title do %>
  我的UBOSS
<% end %>

<div class="container">
  <div class="my_acuntbox1">
    <div class="my_acuntcont">
      <%= link_to settings_account_path do %>
      <span class="my_img"><%= image_tag current_user.avatar_url(:thumb) %></span>
      <span class="my_text">
        <%= truncate current_user.identify,:length=>28,:omission=>'...' %>
      </span>
      <% end %>
      <% if not browser.wechat? %>
      <span class="my_btn">
        <%= link_to "退出账户", destroy_user_session_path, method: :delete, class:'my_retur', style: 'padding:13px;' %>
      </span>
      <% end %>
    </div>
  </div>
  <div class="my_acuntbox2">
    <div class="my_menu">
      <ul>
        <li><a id="showlist" class="active">我的订单</a></li>
        <li><a id="showincome">我的收益</a></li>
      </ul>
    </div>
    <div class="my_con1">
      <div id="u-order-list">
        <%= render partial: 'order', collection: @orders %>
      </div>
      <div id="load-more" data-container='#u-order-list' data-ele='.acc-order' data-ref='/account/orders'>加载更多</div>
    </div>

    <div class="accunt_adil undis">
      <div class="accunt_adil_box1">
        <p>总收益</p>
        <strong><%= number_to_currency(current_user.income.to_f + current_user.frozen_income.to_f) %></strong><span>元</span>
      </div>
      <div class="accunt_adil_box2">
        <p>可提现</p>
        <strong><%= number_to_currency(current_user.income.to_f) %></strong><span>元</span>
      </div>
      <div class="accunt_adil_box3">
        <%= link_to("提现", new_withdraw_records_path , class:"accunt_adilbtn") %>
      </div>
    </div>
  </div>
</div>
