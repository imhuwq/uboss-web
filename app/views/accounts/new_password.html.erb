
<div class="bg-white text-center gap m-top10  m-bottom10">
  <h4 class="like-color">您还未设置密码，请设置密码</h4>
</div>

<br />

<%= simple_form_for(current_user, url: set_password_path, method: :PATCH) do |f| %>
  <div class="address-new">
    <div class="box-m10">
      <table>
        <tr>
          <td>密码</td>
          <td><%= f.input_field :password ,class:'input-block' ,placeholder: '输入密码'%></td>
        </tr>
        <tr>
          <td>确认密码</td>
          <td><%= f.input_field :password_confirmation,class:'input-block',placeholder: '请再次输入密码' %></td>
        </tr>
      </table>
      <br />
      <p><%= f.submit "确认", class: "btn btn-large btn-block" %></p>
      <br />
      <%= link_to "以后设置", after_sign_in_path_for(current_user, need_new_passowrd: false),
        class: 'action-link-btn btn btn-large btn-block btn-black-border' %>
      <br />
    </div>
  </div>
<% end %>

