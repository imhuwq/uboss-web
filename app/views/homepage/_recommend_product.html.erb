<div class='recommend_products_wrap recomment_store_or_product'>
  <div class="link-tab box bg-white m-bottom10">
    <%= link_to recommend_products_homepage_path(@user), remote: true, class:'box-w50' do %>
      <div class="black-color active">推荐商品</div>
    <% end %>
    <%= link_to recommend_stores_homepage_path(@user), remote: true,class:'box-w50' do %>
      <div class="gray-color">推荐店铺</div>
    <% end %>
  </div>

  <% @recommend_products.each_slice(2) do |products| %>
		<div class="share-store-list box-w100 nogap">
      <% products.each_with_index do |product, index| %>
        <div class="box-w50 <%= index == 0 ? 'nogap-left':'nogap-right'%>">
          <div class="product-box">
            <div class="cover">
              <% url = product.class.name == 'OrdinaryProduct' ? product_path(id: product.id): service_product_path(product) %>
              <%= link_to url do %>
                <%= image_tag( product.image_url(:w120)) %>
                <p class='gray-color desc text-cut'><%= product.short_description %></p>
              <% end %>
              <div class='price'>￥<%= product.present_price %></div>
            </div>
          </div><!-- product-box -->
        </div>
      <% end %>
    </div>
  <% end %>
</div>
