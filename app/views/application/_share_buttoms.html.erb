
<p>分享到</p>
<div id="share_buttoms">
	<a class='share-wx-btn'><%= image_tag("img/01.png") %></a>
	<a class="jiathis_button_tsina"><%= image_tag("img/02.png") %></a>
	<a class="jiathis_button_tqq"><%= image_tag("img/03.png") %></a>
  <a id="copycardid"><%= image_tag("img/04.png") %></a>
</div>

<div class="font-h4 undis bg_white" id="share_link" style="padding:20px 10px;word-wrap: break-word;">
  <%= product_sharing_link(product, node) %>
</div>

<!-- // jiathis的js包 -->
<% if request.xhr? %>

  <script type="text/javascript" charset="utf-8">
var _hmt = _hmt || [];
(function() {
  var hm = document.createElement("script");
  hm.src = "http://v3.jiathis.com/code/jia.js";
  var s = document.getElementsByTagName("script")[0];
  s.parentNode.insertBefore(hm, s);
})();

$('meta[name=sharing_link]').attr('content', "<%= product_sharing_link(product, node) %>")

$('#copycardid').on('click', this,function(event) {
  $('#share_link').toggle();
});

var jiathis_config = {
  url:      UBoss.luffy.sharing_url,
  title:    UBoss.luffy.sharing_title,
  summary:  UBoss.luffy.sharing_desc,
  pic:      UBoss.luffy.sharing_imgurl,
  imageUrl: UBoss.luffy.sharing_imgurl
}

UBoss.luffy.resetInvokeSharing()
  </script>

<% else %>

  <script type="text/javascript" src="http://v3.jiathis.com/code/jia.js"></script>
  <script type="text/javascript" charset="utf-8">
$(document).ready(function(){
  $('meta[name=sharing_link]').attr('content', "<%= product_sharing_link(product, node) %>")

    $('#copycardid').on('click', this,function(event) {
      $('#share_link').toggle();
    });

  var jiathis_config = {
    url:      UBoss.luffy.sharing_url,
    title:    UBoss.luffy.sharing_title,
    summary:  UBoss.luffy.sharing_desc,
    pic:      UBoss.luffy.sharing_imgurl,
    imageUrl: UBoss.luffy.sharing_imgurl
  }

  UBoss.luffy.resetInvokeSharing()
})
  </script>

<% end %>
