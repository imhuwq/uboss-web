
<%= content_for :page_title do %>
  奖券
<% end %>

<%= content_for :header_left do %>
  <a class="back" onclick="history.go(-1)"><%= image_tag 'mobile/right.png' %></a>
<% end %>

<div class="tab-nav m-top10">
	<a class="tab border-right" href="/account/verify_codes">验证券</a>
	<a class="tab active" href="/account/verify_codes/lotteries">奖券</a>
</div>
<% @activity_prizes.each do |activity_prize| %>
  <%= link_to lottery_detail_account_verify_codes_path(id: activity_prize.id) do %>
    <div class="lottery-list m-top10 black-color">
      <div class="title text-cut">
        <%= activity_prize.promotion_activity.user.service_store.store_name %>
        <span class="pull-right like-color">
          <%= activity_prize.verify_code.verified ? '已消费' : '未使用' %>
        </span>
      </div><!-- title -->
    	<div class="lottery-message gap">
        <h4 class="text-cut">
          <%= activity_prize.activity_info.name %>
        </h4>
        <p>
        <small>
          有效期到:<%= activity_prize.expire_at.to_date %>
        </small>
        </p>
    	</div><!-- lottery-message -->
    	<div class="lottery-from text-cut">
    		<% if activity_prize.activity_type == 'share' && activity_prize.sharer_id %>
    			<%= activity_prize.sharer.try(:identify) %>通过我分享的二维码获奖后我同样获取一份
    		<% elsif activity_prize.activity_type == 'live' %>
    			关注公众号抽奖获得
        <% elsif activity_prize.activity_type == 'share' %>
    			识别朋友分享的二维码抽奖获得
    		<% end %>
    	</div><!-- lottery-from -->
    </div><!-- lottery-list -->
  <% end %>
<% end %>

