<div class="add_inout">
  <p>
    <span class="add_textd">收货人</span>
    <%= f.input_field :username, placeholder: '收件人姓名', class:"add_text" %>
  </p>
  <p><span>联系电话</span><%= f.input_field :mobile, type: :tel, placeholder: '输入手机',class:"add_text" %></p>
  <p class="city-group" id="try"><span>所在地区</span>
    <%= f.select :province, options_for_select([['--省份--', '']] + ChinaCity.list, @user_address.province ),
                     {}, class: 'city-select ', id: "province" %>
    <%= f.select :city, options_for_select([['--城市--', '']] + ChinaCity.list(@user_address.province), @user_address.city), {}, :class => 'city-select', id: "city" %>
    <%= f.select :area, options_for_select([['--地区--', '']] + ChinaCity.list( @user_address.city), @user_address.area), {}, :class => 'city-select', id: "area" %>
  </p>
  <p><span>详细地址</span><%= f.input_field :building, placeholder: '街道、门牌号',class:"add_text" %></p>
  <p><span>设为默认</span><%= f.input_field :default,class:"add_text" %></p>
</div>
