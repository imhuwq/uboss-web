<% if flash[:error].present? %>
  <%= sanitize alert_box flash[:error], type: 'alert-danger' %>
<% elsif flash[:notice].present? %>
  <%= sanitize alert_box flash[:notice] %>
<% elsif flash[:alert].present? %>
  <%= sanitize alert_box flash[:alert], type: 'alert-warning' %>
<% elsif flash[:success].present? %>
  <%= sanitize alert_box flash[:success], type: 'alert-success' %>
<% end -%>
