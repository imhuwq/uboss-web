<% if flash.any? %>
  <div class="flash_css <%= "auto_close_flash_css" unless flash[:error] || flash[:alert] %>">

    <div id="flash-messages">
      <% if flash[:success] %>
        <div class="alert alert-success">
          <a class="close" data-dismiss="alert">x</a>
          <p class="p_class"><%== flash[:success] %></p>
        </div>
      <% end %>
      <% if flash[:info] || flash[:notice] %>
        <div class="alert alert-info">
          <a class="close" data-dismiss="alert">x</a>
          <%= sanitize flash[:info] || flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:error] || flash[:alert] %>
        <div class="alert alert-error">
          <a class="close" data-dismiss="alert">x</a>
          <%= sanitize flash[:error] || flash[:alert] %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
