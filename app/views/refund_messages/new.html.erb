<%= content_for :page_title do %>
  <%= link_to order_item_order_item_refund_path(order_item_id: @order_item.id, id: @refund.id) do %>
    <div>
      <i class="fa fa-chevron-left"></i>
      协商详情
    </div>
  <% end %>
<% end %>
<br />
<div id="order_item_refund_consult_info">
  <div class='refund-box'>
    <%= simple_form_for [@order_item, @refund, @refund_message] do |f| %>
      <%= upyun_meta_tags prefix: 'asset_img/avatar' %>
      <%= f.text_area :message, class: 'input-block' %>
      <%= f.hidden_field :user_type, value: '买家', class: 'input-block' %>
      <div class='form-group string optional order_item_refund_asset_imgs'>
        <%= f.input_field :avatar, type: :hidden, as: :file, class: 'refund_avatar' %>
        <p class="fileinput-button">
          <%= image_tag("admin/no-img.png") %>
          <%= file_field_tag "image", class: "upyun_file" %>
          <b class="loading"><i class="fa fa-spinner"></i></b>
        </p>
      </div>
      <%= f.submit "发表留言", class: "btn btn-large btn-block use-new-addr-btn" %>
    <% end %>
  </div>

  <div class='refund-box'>
    <% @refund_messages.each do |message| %>
      <p><%= image_tag(message.user.image_url(:thumb)) %></p>
      <p><%= message.user_type %></p>
      <p><%= message.user.nickname %></p>
      <p><%= message.created_at %></p>
      <p><%= message.action %></p>
      <p><%= sanitize message.message %></p>
      <p><%= message.explain %></p>
      <p class="fileinput-button">
        <% message.asset_imgs.each do |img| %>
          <%= image_tag(img.image_url(:thumb)) %>
        <% end %>
      </p>
    <% end %>
  </div>
</div>
