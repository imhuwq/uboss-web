<%= content_for :title do %>
  服务系统
<% end %>
<%= content_for :page_title do %>
  切换子帐号
<% end %>
<%= content_for :header_right do %>
  <%= link_to "返回服务", "/account/calling_notifies", class: "btn btn-mid btn-orange pull-right", style: "margin:6px 10px 0 0;" %>
<% end %>
<%= content_for :header_right do %>
  <span class="pull-left">&nbsp;</span>
<% end %>

<div class="container nogap">
  <% @store_accounts.each do |account| %>
    <%= link_to '#切换帐户', method: :patch do || %>
      <div class="box-w33">
        <div class="admin-box text-center">
          <%= image_tag account.user.avatar_url(:thumb), height: 64, width: 64 %>
          <p>账户：<%= account.user.identify %></p>
          <p>店铺名称：<%= account.user.service_store.store_name %></p>
          <span class="btn btn-large">切换</span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
