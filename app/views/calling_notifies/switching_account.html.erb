<%= content_for :title do %>
  服务系统
<% end %>
<%= content_for :page_title do %>
  切换子帐号
<% end %>
<%= content_for :header_right do %>
  <%= link_to "返回服务", "/account/calling_notifies", class: "btn btn-mid btn-orange pull-right", style: "margin:6px 10px 0 0;" %>
<% end %>
<%= content_for :header_right do %>
  <span class="pull-left">&nbsp;</span>
<% end %>

<div class="container nogap m-top10">
  <% @store_accounts.each do |account| %>
    <%= link_to '#切换帐户', method: :patch do || %>
      <div class="bg-white gap" style="margin-bottom: 5px;">
         <div class="pull-left" style="margin-right: 10px;"><%= image_tag account.user.avatar_url(:thumb), height: 82, width: 82 %></div>
         <p class="text-cut black-color" style="margin-bottom: 4px;">账　　户：<%= account.user.identify %></p>
         <p class="text-cut black-color" style="margin-bottom: 10px;">店铺名称：<%= account.user.service_store.store_name %></p>
         <p><span class="btn text-center" style="width: 80px;">切换</span></p>
      </div><!-- bg-white -->
    <% end %>
  <% end %>
</div>
