<% order_charge.orders.each do |order| %>
<% verify_code = order.verify_code %>
  <div class="service-code bg-white gap m-bottom10">
  	<span class="pull-left gray-color">验证券密码 ：</span>
  	<span class="main-color"><%= verify_code.code %></span>
  	<span class="status-icon"><%= verify_code.verified ? '已消费' : '未使用' %></span>
  </div>
  <div class="comfirmed-dishes-box nogap">
    <div class="bg-white m-top10">
      <div class="store-name m-bottom10 text-cut"><%= order.seller.identify  %></div>
      <div class="gap-lr">
        <% order.order_items.each do |item| %>
            <div class="m-bottom10">
              <span class="pull-right text-cut num text-right gray-color">x <%= item.amount %></span>
              <span class="pull-right text-cut price ">￥ <%= item.present_price %></span>
              <div class="text-cut"><%= product_inventory_fullname(item) %></div>
            </div><!— m-bottom10 —>
        <% end %>
      </div><!— gap-lr —>
    </div><!— bg-white —>
  </div>
<% end %>
<div class="gap">
  <p><a href="<%= service_store_path(product.service_store) %>" class="btn btn-block btn-large btn-black-border">返回店铺首页</a></p>
</div>
<br />