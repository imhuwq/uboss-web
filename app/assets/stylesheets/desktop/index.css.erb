.header-img{ background:url('<%= asset_path("desktop_image/bg.jpg") %>');padding:120px 0 40px;position:relative;}
.wenzi{margin:60px 0}
.video-banner{ border-radius:10px;overflow:hidden;position:relative;}
.play-icon { position:absolute;bottom:20px;font-size:18px;color:#fff; left:15px;cursor: pointer;}
.play-icon:hover i{background:#0ff0c4 }
.play-icon i { width:37px; padding-left:3px; height:40px;  line-height:40px; border:2px solid #fff; border-radius:500px; text-align:center}
.video-bg {position:fixed;top:0;left:0; height:100%;min-height:100%; width:100%;background:rgba(0,0,0,0.5);z-index:88;overflow:hidden}
.video-bg .video-content{position:fixed;left:50%;top:50%;width:600px;height:400px;margin-top:-210px;margin-left:-310px;z-index:99;border:10px solid #fff;border-radius:10px;background:#fff;}
.video-bg .video-box { position:relative;}
.close {cursor: pointer;position:absolute;top:-30px;right:-30px;background:#fff; height:35px;width:35px;border:4px solid #333;text-align:center;line-height:33px;font-size:25px;border-radius:500px;color:#333;text-shadow: 2px 2px 5px #999;}
.gray-bg{ background:#f8f8f8;}
.page-title {  position:relative;padding:0 60px; margin:20px 0; display:inline-block; font-weight:normal}
.page-title:after{ position:absolute; background:#43c3aa; height:1px; width:100%;left:0; top:50%;content:"";z-index:1;}
.page-title span{	border-radius:10px;background-color: #43c3aa; color:#fff; outline:10px solid #f8f8f8;display:inline-block; padding:10px  15px; position:relative; z-index:2;}
.page4{position:relative}
.page4:after {position:absolute;left:50%;top:160px; height:220px; width:1px; background:#ff9000;content:"";}
.orange-page-title{display:block; position:relative; margin:20px 60px;font-weight:normal}
.orange-page-title:after{ position:absolute; background:#ff9000; height:1px; width:100%;left:0; top:50%;content:"";z-index:1;}
.orange-page-title span{color: #ff9000;background:#fff;  border-right:40px solid #fff;border-left:40px solid #fff;display:inline-block; padding:10px  20px; position:relative; z-index:2;}
.step-box { position:relative;padding-top:30px;}
.step-box span {position:absolute; top:0; left:80px;color:#ffd907;font-style: italic; font-size:30px; line-height:30px;}
.text-info { height:50px; color:#ff9000;}
