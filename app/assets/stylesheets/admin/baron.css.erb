/* CSS styles in this file are need for proper Baron work */
#scroller {
    position: relative;
    overflow: hidden;
    height: 400px;
    box-sizing:border-box;
    padding-right: 30px;
}
.scroller-container {
    overflow-y: scroll;
    background:#272727;
    width: 100%;
    height: 100%;
    border: 0;
}
.scroller-container::-webkit-scrollbar { /* Preventing webkit bug of horizontal scrolling */
    width: 0;
}
.scroller-bar-wrapper { /* The bar. You should define width, right and background */
    position: absolute;
    z-index: 3;
    top: 0px;
    bottom: 0px;
    right: 0px;
    width: 20px;
    background: #383736;
    pointer-events: auto;
}

.scroller-bar {
    position: absolute;
    z-index: 1;
    width: 20px;
    background: url('<%= asset_path("admin/scrollbar.png") %>') center center #1AB99B no-repeat;
    opacity: 0;
    -webkit-transition: opacity .2s linear;
    transition: opacity .2s linear;
    pointer-events: auto;
}
.scroller-bar:hover {
    opacity: .8;
}
.baron .scroller-bar {
    opacity: 1;
}